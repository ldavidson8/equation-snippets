---
import type { CollectionEntry } from 'astro:content'
import KatexFormula from './KatexFormula.astro'

interface Props {
  formula: CollectionEntry<'formulas'>
}

const { formula } = Astro.props

const difficultyColors = {
  beginner: { level: 1, color: 'bg-green-500', label: 'Beginner' },
  intermediate: { level: 2, color: 'bg-yellow-400', label: 'Intermediate' },
  advanced: { level: 3, color: 'bg-red-500', label: 'Advanced' },
}

const difficulty = formula.data.difficulty
---

<a href={`/formulas/${formula.slug}`}>
  <div class="group flex flex-col">
    <div class="flex aspect-[16/9] items-center justify-center rounded-md bg-white dark:bg-black">
      <KatexFormula
        latex={formula.data.latex}
        className="w-3/4 opacity-90 transition-opacity group-hover:opacity-100"
      />
    </div>
    <div class="flex-1 p-2">
      <div class="text-foreground/60 mb-1 flex items-center justify-between">
        <h2 class="text-foreground mb-1 text-lg font-semibold transition-colors">
          {formula.data.title}
        </h2>
      </div>
      {
        difficulty && (
          <div class="mb-3 flex items-center gap-2">
            <span class="inline-block rounded-full text-xs font-medium text-neutral-700 dark:text-neutral-200">
              {difficultyColors[difficulty].label}
            </span>
            <div class="flex gap-1">
              {[1, 2, 3].map((segment) => (
                <div
                  class:list={[
                    'h-1.5 w-8 rounded-full transition-colors',
                    segment <= difficultyColors[difficulty].level
                      ? difficultyColors[difficulty].color
                      : 'bg-border',
                  ]}
                />
              ))}
            </div>
          </div>
        )
      }
      <p class="text-foreground/50 line-clamp-2 text-sm text-pretty">{formula.data.description}</p>

      <div class="mt-3 flex flex-wrap gap-1.5">
        {
          formula.data.tags.map((tag) => (
            <span class="rounded-full border border-neutral-300 px-2.5 py-1 text-xs font-medium text-neutral-700 dark:text-neutral-200">
              {tag}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</a>
